<style>
  /* Gesamter rechter Bereich, ruhig, viel Wei√üraum */
  .banjadoAltItem {
    font-family: inherit;
  }

  .banjadoAltItem__title {
    font-size: 1.35rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 .25rem 0;
  }

  .banjadoAltItem__subtitle {
    font-size: .95rem;
    opacity: .75;
    margin: 0 0 1rem 0;
  }

  /* Kachel Grid wie bei wall art */
  .banjadoAltItem__tileGrid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: .75rem;
    margin: .5rem 0 1rem 0;
  }

  .banjadoAltItem__tile {
    border: 1px solid rgba(0,0,0,.18);
    border-radius: .5rem;
    padding: .75rem;
    cursor: pointer;
    background: #fff;
    text-align: left;
    position: relative;
    min-height: 64px;
    transition: transform .08s ease, border-color .08s ease;
    user-select: none;
  }

  .banjadoAltItem__tile:hover {
    transform: translateY(-1px);
    border-color: rgba(0,0,0,.32);
  }

  .banjadoAltItem__tile.isActive {
    border: 2px solid #cc1f1f;
    padding: .6875rem;
  }

  .banjadoAltItem__tileCheck {
    position: absolute;
    right: .5rem;
    top: .5rem;
    width: 18px;
    height: 18px;
    border-radius: 999px;
    background: #cc1f1f;
    display: none;
  }

  .banjadoAltItem__tile.isActive .banjadoAltItem__tileCheck {
    display: inline-block;
  }

  .banjadoAltItem__tileSize {
    font-weight: 700;
    font-size: .95rem;
    margin-bottom: .25rem;
  }

  .banjadoAltItem__tilePrice {
    font-size: .92rem;
    opacity: .9;
  }

  /* Mobile, zwei Spalten */
  @media (max-width: 768px) {
    .banjadoAltItem__tileGrid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  /* Sehr klein, eine Spalte */
  @media (max-width: 420px) {
    .banjadoAltItem__tileGrid {
      grid-template-columns: 1fr;
    }
  }

  /* Optional, Standard Dropdown ausblenden, wenn vorhanden */
  .banjadoAltItemHideNative select,
  .banjadoAltItemHideNative .variation-select,
  .banjadoAltItemHideNative .v-variation-select {
    display: none !important;
  }
</style>
